<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:gallerycontrols="clr-namespace:AtomUIGallery.Controls">
    <ControlTheme x:Key="{x:Type gallerycontrols:ShowCasePanel}"
                  TargetType="{x:Type gallerycontrols:ShowCasePanel}">
        <Setter Property="Template">
            <ControlTemplate TargetType="{x:Type gallerycontrols:ShowCasePanel}">
                <ScrollViewer>
                    <UniformGrid Rows="1" Columns="2" Margin="0">
                        <StackPanel Name="PART_LeftPanel"
                                    Orientation="Vertical"
                                    Spacing="10"
                                    Margin="0, 0, 10, 0" />
                        <StackPanel Name="PART_RightPanel"
                                    Orientation="Vertical"
                                    Spacing="10" />
                    </UniformGrid>
                </ScrollViewer>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>