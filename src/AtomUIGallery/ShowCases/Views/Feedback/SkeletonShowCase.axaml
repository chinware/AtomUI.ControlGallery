<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.SkeletonShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:gallerycontrols="clr-namespace:AtomUIGallery.Controls">
    <gallerycontrols:ShowCasePanel>
        <gallerycontrols:ShowCaseItem
            Title="Basic"
            Description="Simplest Skeleton usage."
            OccupyEntireRow="True">
            <atom:Skeleton/>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem
            Title="Complex combination"
            Description="Complex combination with avatar and multiple paragraphs."
            OccupyEntireRow="True">
            <atom:Skeleton IsShowAvatar="True" ParagraphRows="4"/>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem
            Title="Active Animation"
            Description="Display active animation."
            OccupyEntireRow="True">
            <atom:Skeleton IsActive="True"/>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem
            Title="Button/Avatar/Input/Image/Node"
            Description="Skeleton Button, Avatar, Input, Image and Node."
            OccupyEntireRow="True">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <atom:SkeletonAvatar/>
                </StackPanel>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
    </gallerycontrols:ShowCasePanel>
</UserControl>