        <gallerycontrols:ShowCaseItem Title="Grouping table head" Description="Group table head with columns[n].children." OccupyEntireRow="true">
            <atom:DataGrid>
                <atom:DataGrid.ColumnGroups>
                    <atom:DataGridTextColumn Header="Name"/>
                    <atom:DataGridColumnGroupItem Header="Other">
                        <atom:DataGridTextColumn Header="Age"/>
                        <atom:DataGridColumnGroupItem Header="Address">
                            <atom:DataGridTextColumn Header="Street"/>
                            <atom:DataGridColumnGroupItem Header="Block">
                                <atom:DataGridTextColumn Header="Building"/>
                                <atom:DataGridTextColumn Header="Door No."/>
                            </atom:DataGridColumnGroupItem>
                        </atom:DataGridColumnGroupItem>
                    </atom:DataGridColumnGroupItem>
                    <atom:DataGridColumnGroupItem Header="Company">
                        <atom:DataGridTextColumn Header="Company Address"/>
                        <atom:DataGridTextColumn Header="Company Name"/>
                    </atom:DataGridColumnGroupItem>
                    <atom:DataGridTextColumn Header="Gender"/>
                </atom:DataGrid.ColumnGroups>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
    </gallerycontrols:ShowCasePanel>
</UserControl>