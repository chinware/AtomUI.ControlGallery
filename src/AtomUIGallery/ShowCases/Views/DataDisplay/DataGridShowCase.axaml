<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.DataGridShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:gallerycontrols="clr-namespace:AtomUIGallery.Controls">
    <gallerycontrols:ShowCasePanel>
        <gallerycontrols:ShowCaseItem Title="Basic" Description="Simple table with actions." >
            <atom:DataGrid x:Name="BasicCaseGrid">
                <atom:DataGrid.Columns>
                    <atom:DataGridTextColumn CanUserSort="True" Header="Name"  Binding="{Binding Name}"/>
                    <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                    <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                </atom:DataGrid.Columns>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
    </gallerycontrols:ShowCasePanel>
</UserControl>