        <gallerycontrols:ShowCaseItem
            Title="Preset Colors"
            Description="Set the presets color of the color picker."
            OccupyEntireRow="True">
            <StackPanel Spacing="10" Orientation="Horizontal">
                <atom:ColorPickerView Value="#1677ff" IsPaletteGroupEnabled="True"/>
                <atom:GradientColorPicker IsPaletteGroupEnabled="True" >
                    <atom:GradientColorPicker.DefaultValue>
                        <LinearGradientBrush>
                            <GradientStop Color="#108ee9" Offset="0"/>
                            <GradientStop Color="#87d068" Offset="1"/>
                        </LinearGradientBrush>
                    </atom:GradientColorPicker.DefaultValue>
                </atom:GradientColorPicker>
            </StackPanel>
